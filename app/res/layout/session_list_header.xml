<?xml version="1.0" ?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/section_header_layout"
>
	<ImageView style="@style/section_header_icon"
		android:src="@drawable/section_sessions"
	/>
	<TextView style="@style/section_header_text"
		android:text="@string/model_session"
	/>
	<Button android:id="@+id/button_add_new_session"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/marging_in_section"

		android:text="@string/button_add_new_session"
		android:textSize="14sp"
		android:textColor="#FFFFFF"
		android:background="#00FFFFFF"

		android:onClick="clickNewSession"
	/>
</RelativeLayout>
